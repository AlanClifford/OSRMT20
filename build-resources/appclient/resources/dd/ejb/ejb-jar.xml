<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee" version="2.1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
    <display-name>OSRMT</display-name>
    <enterprise-beans>
        <entity>
            <ejb-name>ReferenceMapBean</ejb-name>
            <home>com.osframework.ejb.reference.common.ReferenceMapHome</home>
            <remote>com.osframework.ejb.reference.common.ReferenceMap</remote>
            <ejb-class>com.osframework.ejb.reference.common.ReferenceMapBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
            <transaction-type>Container</transaction-type>
            <ejb-local-ref>
                <ejb-ref-name>ejb/ReferenceMap</ejb-ref-name>
                <ejb-ref-type>Entity</ejb-ref-type>
                <local-home>com.osframework.ejb.reference.common.LocalReferenceMapHome</local-home>
                <local>com.osframework.ejb.reference.common.LocalReferenceMap</local>
                <ejb-link>LocalReferenceMapBean</ejb-link>
            </ejb-local-ref>
            <resource-ref>
                <res-ref-name>jdbc/osrmtDB</res-ref-name>
                <res-type>javax.sql.DataSource</res-type>
                <res-auth>Container</res-auth>
                <res-sharing-scope>Shareable</res-sharing-scope>
            </resource-ref>
            <security-identity>
                <use-caller-identity/>
            </security-identity>
        </entity>
        <entity>
            <ejb-name>SecurityBean</ejb-name>
            <home>com.osframework.ejb.reference.security.SecurityHome</home>
            <remote>com.osframework.ejb.reference.security.Security</remote>
            <ejb-class>com.osframework.ejb.reference.security.SecurityBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
            <transaction-type>Container</transaction-type>
            <ejb-local-ref>
                <ejb-ref-name>ejb/Security</ejb-ref-name>
                <ejb-ref-type>Entity</ejb-ref-type>
                <local-home>com.osframework.ejb.reference.security.LocalSecurityHome</local-home>
                <local>com.osframework.ejb.reference.security.LocalSecurity</local>
                <ejb-link>LocalSecurityBean</ejb-link>
            </ejb-local-ref>
            <resource-ref>
                <res-ref-name>jdbc/osrmtDB</res-ref-name>
                <res-type>javax.sql.DataSource</res-type>
                <res-auth>Container</res-auth>
                <res-sharing-scope>Shareable</res-sharing-scope>
            </resource-ref>
            <security-identity>
                <use-caller-identity/>
            </security-identity>
        </entity>
        <entity>
            <ejb-name>RequirementManagerBean</ejb-name>
            <home>com.osrmt.ejb.reqmanager.RequirementManagerHome</home>
            <remote>com.osrmt.ejb.reqmanager.RequirementManager</remote>
            <ejb-class>com.osrmt.ejb.reqmanager.RequirementManagerBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
            <transaction-type>Container</transaction-type>
            <ejb-local-ref>
                <ejb-ref-name>ejb/RequirementManager</ejb-ref-name>
                <ejb-ref-type>Entity</ejb-ref-type>
                <local-home>com.osrmt.ejb.reqmanager.LocalRequirementManagerHome</local-home>
                <local>com.osrmt.ejb.reqmanager.LocalRequirementManager</local>
                <ejb-link>LocalRequirementManagerBean</ejb-link>
            </ejb-local-ref>
            <resource-ref>
                <res-ref-name>jdbc/osrmtDB</res-ref-name>
                <res-type>javax.sql.DataSource</res-type>
                <res-auth>Container</res-auth>
                <res-sharing-scope>Shareable</res-sharing-scope>
            </resource-ref>
            <security-identity>
                <use-caller-identity/>
            </security-identity>
        </entity>
        <entity>
            <ejb-name>SystemBean</ejb-name>
            <home>com.osframework.ejb.system.SystemHome</home>
            <remote>com.osframework.ejb.system.System</remote>
            <ejb-class>com.osframework.ejb.system.SystemBean</ejb-class>
            <persistence-type>Bean</persistence-type>
            <prim-key-class>java.lang.String</prim-key-class>
            <reentrant>false</reentrant>
            <transaction-type>Container</transaction-type>
            <ejb-local-ref>
                <ejb-ref-name>ejb/System</ejb-ref-name>
                <ejb-ref-type>Entity</ejb-ref-type>
                <local-home>com.osframework.ejb.system.LocalSystemHome</local-home>
                <local>com.osframework.ejb.system.LocalSystem</local>
                <ejb-link>LocalSystemBean</ejb-link>
            </ejb-local-ref>
            <resource-ref>
                <res-ref-name>jdbc/osrmtDB</res-ref-name>
                <res-type>javax.sql.DataSource</res-type>
                <res-auth>Container</res-auth>
                <res-sharing-scope>Shareable</res-sharing-scope>
            </resource-ref>
            <security-identity>
                <use-caller-identity/>
            </security-identity>
        </entity>
    </enterprise-beans>
    <assembly-descriptor>
        <security-role>
            <role-name>osrmtAdmin</role-name>
        </security-role>
        <method-permission>
            <role-name>osrmtAdmin</role-name>
            <method>
                <ejb-name>ReferenceMapBean</ejb-name>
                <method-name>*</method-name>
            </method>
        </method-permission>
        <container-transaction>
            <method>
                <ejb-name>ReferenceMapBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
	</container-transaction>
        <method-permission>
            <role-name>osrmtAdmin</role-name>
            <method>
                <ejb-name>SecurityBean</ejb-name>
                <method-name>*</method-name>
            </method>
        </method-permission>
        <container-transaction>
            <method>
                <ejb-name>SecurityBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
	</container-transaction>
        <method-permission>
            <role-name>osrmtAdmin</role-name>
            <method>
                <ejb-name>RequirementManagerBean</ejb-name>
                <method-name>*</method-name>
            </method>
        </method-permission>
        <container-transaction>
            <method>
                <ejb-name>RequirementManagerBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
	</container-transaction>
        <method-permission>
            <role-name>osrmtAdmin</role-name>
            <method>
                <ejb-name>SystemBean</ejb-name>
                <method-name>*</method-name>
            </method>
        </method-permission>
        <container-transaction>
            <method>
                <ejb-name>SystemBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
	</container-transaction>
    </assembly-descriptor>
</ejb-jar>